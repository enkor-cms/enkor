{
    "extends": [
        "eslint:recommended",
        "next/core-web-vitals",
        "plugin:prettier/recommended",
        "plugin:storybook/recommended"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "bracketSpacing": true,
                "bracketSameLine": false,
                "arrowParens": "always"
            }
        ]
    }
}
